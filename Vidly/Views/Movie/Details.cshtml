@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Html.DisplayFor(x => x.ReleaseDate) </li>
    <li>Date Added: @Html.DisplayFor(x => x.DateAdded)</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

