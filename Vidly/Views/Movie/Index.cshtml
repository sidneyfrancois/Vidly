@model Vidly.ViewModels.ListOfMoviesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@if (Model.Movies.Any())
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movies</th>
        </tr>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movie", new { id = movie.Id }, null)</td>
            </tr>
        }
    </table>
}
else
{
    <p>We currently don't have any movie yet.</p>
}

