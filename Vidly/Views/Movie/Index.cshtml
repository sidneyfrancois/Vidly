@model Vidly.ViewModels.ListOfMoviesViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@if (Model.Movies.Any())
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>

        @Html.ActionLink("New Movie", "New", "Movie", new { @class = "btn btn-primary" })

        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </table>
}
else
{
    <p>We currently don't have any movie yet.</p>
}

